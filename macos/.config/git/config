[pull]
    rebase  = yes
    octopus = octopus

[push]
    default = current

[color]
    ui = true

[core]
    pager = delta
    filemode     = false
    excludesfile = ~/.config/git/ignore

[interactive]
    diffFilter = delta --color-only

[delta]
    side-by-side = true
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[diff]
    renames = copies
    algorithm = patience

[merge]
    tool = vimdiff

[mergetool]
    keepBackup = false

[format]
    pretty = format:"%C(yellow)%h%Creset %ad | %Cgreen%s%Creset %Cred%d%Creset %Cblue[%an]"

[color]
    ui = true

[color "branch"]
    current = green
    local   = blue
    remote  = yellow

[color "status"]
    added     = green
    changed   = blue
    untracked = red

[log]
    abbrevcommit = true
    date=short

[commit]
    gpgsign = true

[gpg]
    program = gpg2
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
